<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="SparkLauncher.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SparkLauncher"
    xmlns:winex="using:WinUIEx"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Activated="WindowEx_Activated"    
    IsMaximizable="False"
    Width="800"
    Height="500"
    IsResizable="False"    
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid 
            x:Name="AppTitleBar"
            Height="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition x:Name="IconColumn" Width="Auto" />
                <ColumnDefinition x:Name="TitleColumn" Width="Auto" />
                <ColumnDefinition x:Name="LeftDragColumn" Width="*" />
                <ColumnDefinition x:Name="RightDragColumn" Width="*" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
        </Grid>

        <ScrollView
            Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="50 10">
                    <TextBlock
                        x:Name="TitleTextBlock"
                        VerticalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Spark Launcher"
                        FontSize="28"/>
                </Grid>

                <Line
                    Grid.Row="1"
                    X1="0" Y1="0"
                    X2="800" Y2="0"
                    StrokeThickness="5"
                    Stroke="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                <StackPanel
                    Grid.Row="2"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical"
                    Margin="50 15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid
                            Margin="0 0 10 0"
                            Width="22"
                            MinHeight="100"
                            VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!--<FontIcon 
                                Glyph="&#xEB90;" 
                                Foreground="Red"
                                FontSize="22"/>-->
                            <FontIcon
                                Glyph="&#xEC61;" 
                                Foreground="Green"
                                FontSize="22"/>
                            <!--<ProgressRing 
                                IsActive="True" 
                                Background="Transparent"
                                Width="22"
                                Height="22"/>-->

                            <Line
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                X1="0" Y1="0"
                                X2="0" Y2="1"
                                Stretch="Fill"
                                StrokeThickness="2"
                                Stroke="{ThemeResource ControlStrokeColorOnAccentSecondaryBrush}"/>
                        </Grid>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Vertical"
                            Spacing="4"
                            VerticalAlignment="Top">

                            <TextBlock
                                LineHeight="30"
                                Text="自检"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="10">
                                <ProgressBar
                                    Width="400"
                                    Value="20"/>

                                <TextBlock
                                    LineHeight="24"
                                    Text="20%"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                     
                        <Grid
                            Margin="0 0 10 0"
                            Width="22"
                            MinHeight="100"
                            VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                                
                            <!--<FontIcon 
                                Glyph="&#xEB90;" 
                                Foreground="Red"
                                FontSize="22"/>-->
                            <FontIcon
                                Glyph="&#xEC61;" 
                                Foreground="Green"
                                FontSize="22"/>
                            <!--<ProgressRing 
                                IsActive="True" 
                                Background="Transparent"
                                Width="22"
                                Height="22"/>-->

                            <Line
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                X1="0" Y1="0"
                                X2="0" Y2="1"
                                Stretch="Fill"
                                StrokeThickness="2"
                                Stroke="{ThemeResource ControlStrokeColorOnAccentSecondaryBrush}"/>
                        </Grid>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Vertical"
                            Spacing="4"
                            VerticalAlignment="Top">

                            <TextBlock
                                LineHeight="30"
                                Text="检查更新"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="10">
                                <ProgressBar
                                    Width="400"
                                    Value="20"/>

                                <TextBlock
                                    LineHeight="24"
                                    Text="20%"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid
                            Margin="0 0 10 0"
                            Width="22"
                            MinHeight="100"
                            VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!--<FontIcon 
                                Glyph="&#xEB90;" 
                                Foreground="Red"
                                FontSize="22"/>-->
                            <!--<FontIcon
                                Glyph="&#xEC61;" 
                                Foreground="Green"
                                FontSize="22"/>-->
                            <ProgressRing 
                                IsActive="True" 
                                Background="Transparent"
                                Width="22"
                                Height="22"/>

                            <Line
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                X1="0" Y1="0"
                                X2="0" Y2="1"
                                Stretch="Fill"
                                StrokeThickness="2"
                                Stroke="{ThemeResource ControlStrokeColorOnAccentSecondaryBrush}"/>
                        </Grid>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Vertical"
                            Spacing="4"
                            VerticalAlignment="Top">

                            <TextBlock
                                LineHeight="30"
                                Text="校验资源"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="10">
                                <ProgressBar
                                    Width="400"
                                    Value="20"/>

                                <TextBlock
                                    LineHeight="24"
                                    Text="20%"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollView>
        
    </Grid>
</winex:WindowEx>
