<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SparkLauncher.WinUI.UIComponent.Data.PendingExeItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SparkLauncher.UIComponent.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cvs="using:SparkLauncher.WinUI.UIComponent.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <cvs:EnumToVisibilityConverter x:Key="EnumToVis"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <ContentControl
        IsEnabled="{x:Bind IsRunningOrEnded}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid
                Margin="0 0 10 0"
                Width="22"
                MinHeight="100"
                VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <FontIcon 
                    Glyph="&#xEB90;" 
                    Foreground="Red"
                    FontSize="22"
                    Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=Failed, Mode=OneWay}"/>
                <FontIcon
                    Glyph="&#xEC61;" 
                    Foreground="Green"
                    FontSize="22"
                    Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=Succeeded, Mode=OneWay}"/>
                <ProgressRing 
                    IsActive="True" 
                    Background="Transparent"
                    Width="22"
                    Height="22"
                    Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=Pending, Mode=OneWay}"/>

                <Line
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    X1="0" Y1="0"
                    X2="0" Y2="1"
                    Stretch="Fill"
                    StrokeThickness="2"
                    Stroke="{ThemeResource ControlStrokeColorOnAccentSecondaryBrush}"/>
            </Grid>

            <StackPanel
                Grid.Column="1"
                Orientation="Vertical"
                Spacing="4"
                VerticalAlignment="Top">

                <TextBlock
                    LineHeight="30"
                    Text="{x:Bind TaskName}"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                <StackPanel
                    Orientation="Horizontal"
                    Spacing="10">
                    <ProgressBar
                        IsIndeterminate="{x:Bind IsIndeterminate}"
                        Width="400"
                        Value="{x:Bind Progress}"/>

                    <TextBlock
                        Visibility="{x:Bind IsIndeterminate, Converter={StaticResource BoolToVis}, ConverterParameter='Reverse'}"
                        LineHeight="24"
                        Text="{x:Bind _progressPercent}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ContentControl>
    
</UserControl>
