<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SparkLauncher.WinUI.UIComponent.Data.PendingTaskItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SparkLauncher.WinUI.UIComponent.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cvs="using:SparkLauncher.WinUI.UIComponent.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <cvs:EnumToVisibilityConverter x:Key="EnumToVis"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <cvs:BoolToOpacityConverter x:Key="BoolToOpacity"/>
    </UserControl.Resources>

    <Grid
        Margin="5 0"
        Opacity="{x:Bind IsStarted, Converter={StaticResource BoolToOpacity}, Mode=OneWay}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
            Margin="0 0 10 0"
            MinHeight="100"
            VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <FontIcon 
                Glyph="&#xEB90;" 
                Foreground="Red"
                FontSize="22"
                Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=Failed, Mode=OneWay}"/>
            <FontIcon
                Glyph="&#xEC61;" 
                Foreground="Green"
                FontSize="22"
                Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=Succeeded, Mode=OneWay}"/>
            <ProgressRing
                Margin="-2 0 0 0"
                Width="20"
                Height="20"
                Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=Pending, Mode=OneWay}"/>
            <Grid
                Width="20"
                Height="20">
                <Border 
                    Margin="-2 0 0 0"
                    BorderBrush="SkyBlue"
                    BorderThickness="2"
                    CornerRadius="10"
                    Background="Transparent"
                    Width="10"
                    Height="10"
                    Visibility="{x:Bind Status, Converter={StaticResource EnumToVis}, ConverterParameter=None, Mode=OneWay}"/>
            </Grid>


            <Line
                Grid.Row="1"
                HorizontalAlignment="Center"                
                X1="0" Y1="0"
                X2="-1" Y2="1"
                Stretch="Fill"
                StrokeThickness="2"
                Stroke="{ThemeResource ControlStrokeColorOnAccentSecondaryBrush}"/>
        </Grid>

        <StackPanel
            Grid.Column="1"
            Orientation="Vertical"
            VerticalAlignment="Stretch">
            <TextBlock
                LineHeight="30"
                Text="{x:Bind TaskName}"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
        </StackPanel>
    </Grid>

</UserControl>
